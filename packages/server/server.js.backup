      dropdown_data,
      req.session.user
    );
    
    res.json({
      success: true,
      message: 'Dropdown updated successfully',
      data: updated
    });
  } catch (error) {
    console.error('Error updating dropdown:', error);
    res.status(500).json({
      success: false,
      error: error.message
    });
  }
});

