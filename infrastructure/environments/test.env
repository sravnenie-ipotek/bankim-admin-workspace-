# BankIM Test Environment Configuration
# TEST Server: 91.202.169.54 (adminpaneltest-1)

# Environment
NODE_ENV=test
ENVIRONMENT=test

# Server Configuration
HOST=0.0.0.0
PORT=8003
CLIENT_PORT=8004

# Database Configuration (Test Environment)
CONTENT_DATABASE_URL=postgresql://bankim_user:${CONTENT_DB_PASSWORD}@localhost:5432/bankim_content_test
CORE_DATABASE_URL=postgresql://bankim_user:${CORE_DB_PASSWORD}@localhost:5432/bankim_core_test
MANAGEMENT_DATABASE_URL=postgresql://bankim_user:${MANAGEMENT_DB_PASSWORD}@localhost:5432/bankim_management_test

# Security
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_SECRET=${SESSION_SECRET}

# API Configuration
API_TIMEOUT=30000
API_RATE_LIMIT=100
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3002,http://91.202.169.54

# Caching
CACHE_TTL=300
ENABLE_CACHE=true
REDIS_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
LOG_FILE=/var/log/bankim/test-api.log

# Health Monitoring
HEALTH_CHECK_INTERVAL=60000
ENABLE_HEALTH_MONITOR=true
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/bankim/uploads

# Development Features (Test Environment)
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=true

# Deployment Configuration
DEPLOYMENT_ENV=test
SERVER_HOST=91.202.169.54
SERVER_NAME=adminpaneltest-1
DEPLOYMENT_PATH=/var/www/bankim
BACKUP_PATH=/var/backups/bankim

# Performance Settings (Relaxed for Testing)
PM2_INSTANCES=1
PM2_MAX_MEMORY=1024M
PM2_NODE_ARGS="--max-old-space-size=1024"

# Test-Specific Features
ENABLE_TEST_ROUTES=true
MOCK_EXTERNAL_APIS=false
TEST_DATA_SEED=true

# Email Configuration (Test)
EMAIL_SERVICE=console
FROM_EMAIL=test@bankim.local
SMTP_HOST=localhost
SMTP_PORT=1025

# External Services (Test)
EXTERNAL_API_BASE_URL=https://api-test.bankim.com
EXTERNAL_API_TIMEOUT=10000
ENABLE_EXTERNAL_LOGGING=false